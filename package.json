{
  "name": "udio-prompt-crafter",
  "version": "0.10.0",
  "description": "A powerful GUI to help musicians craft high-quality UDIO prompts by choosing from curated style tags. Features a live prompt preview, JSON output, preset management, and quality assistance.",
  "author": "Tim Sinaeve",
  "main": "dist/electron/main.js",
  "scripts": {
    "build": "node esbuild.config.js",
    "start-electron": "npm run build && electron .",
    "package": "npm run build && electron-builder",
    "package-win": "npm run build && electron-builder --win",
    "package-mac": "npm run build && electron-builder --mac",
    "package-linux": "npm run build && electron-builder --linux",
    "publish": "npm run build && electron-builder --publish always"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-updater": "^6.2.1",
    "esbuild": "^0.20.0",
    "immer": "^10.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.timsinaeve.udiopromptcrafter",
    "productName": "UDIO Prompt Crafter",
    "publish": {
      "provider": "github",
      "owner": "beNative",
      "repo": "udio-prompt-crafter"
    },
    "files": [
      "dist/**/*"
    ],
    "extraResources": [
      {
        "from": "dist/docs",
        "to": "docs"
      }
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}